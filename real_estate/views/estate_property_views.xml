<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Search View -->
        <record id="estate_property_search_view" model="ir.ui.view">
            <field name="name">estate.property.view.search</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" filter_domain="[('name', 'ilike', self)]"/>
                    <field name="state"/>
                    <field name="postcode"/>

                    <filter name="filter_state_new" string="New" domain="[('state','=','new')]"/>
                    <filter string="Available" name="available" domain="[('state', 'in', ('new', 'offer_received'))]"/>

                    <filter name="group_postcode" string="Group by Postcode" context="{'group_by':'postcode'}"/>
                    <filter name="group_state" string="Group by State" context="{'group_by':'state'}"/>
                </search>
            </field>
        </record>

        <!-- Simple List View (for Advertisements menu - without state and offers) -->
        <record id="estate_property_simple_list_view" model="ir.ui.view">
            <field name="name">estate.property.view.simple.list</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
               <list create="true">
                   <field name="name"/>
                   <field name="property_type_id"/>
                   <field name="tag_ids" widget="many2many_tags"/>
                   <field name="currency_id" column_invisible="1"/>
                   <field name="expected_price" widget="monetary"/>
                   <field name="bedrooms"/>
                   <field name="living_area"/>
                   <field name="facades"/>
                   <field name="garage"/>
                   <field name="garden"/>
               </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="estate_property_form_view" model="ir.ui.view">
            <field name="name">estate.property.view.form</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_sold"
                                string="Sold"
                                type="object"
                                invisible="state in ['sold', 'cancelled']"/>
                        <button name="action_cancel"
                                string="Cancel"
                                type="object"
                                invisible="state in ['sold', 'cancelled']"/>

                        <field name="state"
                               widget="statusbar"
                               statusbar_visible="new,offer_received,offer_accepted,sold,cancelled"/>
                    </header>

                    <sheet>
                        <!-- Hidden currency field for monetary widget -->
                        <field name="currency_id" invisible="1"/>

                        <!-- Stat Buttons -->
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_offers"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-list">
                                <field name="offer_count" widget="statinfo" string="Offers"/>
                            </button>
                        </div>

                        <group>
                            <group>
                                <field name="name"/>
                                <field name="property_type_id"/>
                                <field name="postcode"/>
                                <field name="date_availability"/>
                            </group>
                            <group>
                                <field name="expected_price" widget="monetary"/>
                                <field name="best_offer" widget="monetary"/>
                                <field name="selling_price" widget="monetary"/>
                                <field name="price_difference"
                                       widget="monetary"
                                       decoration-success="price_difference &gt; 0"
                                       decoration-danger="price_difference &lt; 0"/>
                            </group>
                        </group>
                        <group>
                            <field name="image" widget="image" class="oe_avatar" options="{'preview_image': 'image'}"/>
                        </group>


                        <group>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </group>

                        <!-- Description Field (Collapsible) -->
                        <group string="Description" class="oe_read_only">
                            <field name="description" widget="text"/>
                        </group>

                        <!-- Notebook -->
                        <notebook>
                            <page string="Property Details">
                                <group>
                                    <field name="bedrooms"/>
                                    <field name="living_area"/>
                                    <field name="facades"/>
                                    <field name="garage"/>
                                    <field name="garden"/>
                                    <field name="garden_area" invisible="not garden"/>
                                    <field name="garden_orientation" invisible="not garden" widget="radio"/>
                                    <field name="total_area"/>
                                </group>
                            </page>
                            <page string="Offers">
                                <field name="offer_ids">
                                    <list decoration-success="status == 'accepted'"
                                          decoration-danger="status == 'refused'">
                                        <field name="price"/>
                                        <!-- UPDATED: Show multiple customers as tags -->
                                        <field name="partner_ids" widget="many2many_tags"/>
                                        <field name="validity"/>
                                        <field name="date_deadline"/>
                                        <field name="status" readonly="1"/>
                                        <button name="action_accept"
                                                string="Accept"
                                                type="object"
                                                icon="fa-check"/>
                                        <button name="action_refuse"
                                                string="Refuse"
                                                type="object"
                                                icon="fa-times"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- List View -->
        <record id="estate_property_list_view" model="ir.ui.view">
            <field name="name">estate.property.view.list</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
               <list create="true">
                   <field name="name"/>
                   <field name="property_type_id"/>
                   <field name="postcode"/>
                   <field name="tag_ids" widget="many2many_tags"/>
                   <field name="currency_id" column_invisible="1"/>
                   <field name="expected_price" widget="monetary"/>
                   <field name="selling_price" widget="monetary"/>
                   <field name="date_availability"/>
                   <field name="state" widget="badge"
                          decoration-success="state in ('offer_accepted', 'sold')"
                          decoration-danger="state == 'cancelled'"
                          decoration-info="state == 'offer_received'"
                          decoration-primary="state == 'new'"/>
               </list>
            </field>
        </record>

        <!-- Offer Tree View (for standalone view) -->
        <record id="estate_property_offer_view_list" model="ir.ui.view">
            <field name="name">estate.property.offer.view.list</field>
            <field name="model">estate.property.offer</field>
            <field name="arch" type="xml">
                <list string="Offers"
                      decoration-success="status == 'accepted'"
                      decoration-danger="status == 'refused'">
                    <field name="price"/>
                    <!-- UPDATED: Show multiple customers as tags -->
                    <field name="partner_ids" widget="many2many_tags"/>
                    <field name="validity"/>
                    <field name="date_deadline"/>
                    <button name="action_accept"
                            string="Accept"
                            type="object"
                            icon="fa-check"/>
                    <button name="action_refuse"
                            string="Refuse"
                            type="object"
                            icon="fa-times"/>
                </list>
            </field>
        </record>

        <!-- Offer Form View -->
        <record id="estate_property_offer_view_form" model="ir.ui.view">
            <field name="name">estate.property.offer.view.form</field>
            <field name="model">estate.property.offer</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="price"/>
                            <!-- UPDATED: Many2many field for multiple customers -->
                            <field name="partner_ids"
                                   widget="many2many_tags"
                                   placeholder="Select customers..."
                                   options="{'color_field': 'color', 'no_create': False}"/>
                            <field name="validity"/>
                            <field name="date_deadline"/>
                            <field name="status"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

 <record id="view_estate_property_type_form" model="ir.ui.view">
    <field name="name">estate.property.type.form</field>
    <field name="model">estate.property.type</field>
    <field name="arch" type="xml">
        <form string="Property Type">
            <sheet>
                <!-- Name field -->
                <group>
                    <field name="name"/>
                </group>

                <notebook>
                    <!-- General Information -->
                    <page string="General Information">
                        <group>
                            <field name="property_model"/> <!-- renamed from 'model' -->
                            <field name="category"/>
                            <field name="description"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="color"/>

                        </group>
                    </page>

                    <!-- House / Land Details -->
                    <page string="House / Land Details">
                        <group>
                            <field name="area"/>
                            <field name="number_of_rooms"/>
                            <field name="number_of_bathrooms"/>
                            <field name="number_of_floors"/>
                            <field name="garden"/>
                            <field name="garage"/>
                            <field name="year_built"/>
                            <field name="location"/>
                        </group>
                    </page>

                    <!-- Vehicle Details -->
                    <page string="Vehicle Details">
                        <group>
                            <field name="make"/>
                            <field name="vehicle_model"/> <!-- renamed from 'model' -->
                            <field name="year"/>
                            <field name="engine_type"/>
                            <field name="transmission"/>
                            <field name="car_color"/>
                            <field name="mileage"/>
                            <field name="seats"/>
                            <field name="fuel_capacity"/>
                        </group>
                    </page>
                </notebook>
            </sheet>
        </form>
    </field>
</record>

<!-- LIST VIEW -->
<record id="view_estate_property_type_list" model="ir.ui.view">
    <field name="name">estate.property.type.list</field>
    <field name="model">estate.property.type</field>
    <field name="arch" type="xml">
        <list string="Property Types" decoration-muted="not active">
            <field name="name"/>
            <field name="property_model"/>
            <field name="category"/>
            <field name="active"/>
        </list>
    </field>
</record>

    <!-- Action for Property Type -->
    <record id="estate_property_type_action" model="ir.actions.act_window">
        <field name="name">Property Types</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">list,form</field>
    </record>

        <!-- ACTIONS -->
        <!-- Action for Properties (Simple view without state/offers) -->
        <record id="estate_property_simple_action" model="ir.actions.act_window">
            <field name="name">Properties</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="estate_property_simple_list_view"/>
            <field name="domain">[('state', '=', 'new')]</field>
        </record>

        <!-- Action -->
        <record id="estate_property_action" model="ir.actions.act_window">
            <field name="name">Properties</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'search_default_available': True}</field>
        </record>

        <!-- MENUS -->
        <!-- Root Menu -->
        <record id="estate_menu_root" model="ir.ui.menu">
            <field name="name">Real Estate</field>
            <field name="sequence" eval="10"/>
        </record>

        <!-- Advertisements Menu (Parent - No Action) -->
        <record id="estate_advertisements_menu" model="ir.ui.menu">
            <field name="name">Advertisements</field>
            <field name="parent_id" ref="estate_menu_root"/>
            <field name="sequence" eval="10"/>
        </record>

        <!-- Submenu: Properties -->
        <record id="estate_property_menu" model="ir.ui.menu">
            <field name="name">Properties</field>
            <field name="parent_id" ref="estate_advertisements_menu"/>
            <field name="action" ref="estate_property_action"/>
            <field name="sequence" eval="1"/>
        </record>

        <!-- Settings Menu -->
        <record id="estate_settings_menu" model="ir.ui.menu">
            <field name="name">Settings</field>
            <field name="parent_id" ref="estate_menu_root"/>
            <field name="sequence" eval="100"/>
        </record>

        <!-- Settings Submenus -->
        <record id="estate_property_types_menu" model="ir.ui.menu">
            <field name="name">Property Types</field>
            <field name="parent_id" ref="estate_settings_menu"/>
            <field name="action" ref="estate_property_type_action"/>
            <field name="sequence" eval="1"/>
        </record>

        <record id="estate_property_tags_menu" model="ir.ui.menu">
            <field name="name">Property Tags</field>
            <field name="parent_id" ref="estate_settings_menu"/>
            <field name="action" ref="estate_property_tags_action"/>
            <field name="sequence" eval="2"/>
        </record>


<!-- Dashboard Menu -->
        <record id="estate_property_dashboard_menu" model="ir.ui.menu">
            <field name="name">Dashboard</field>
            <field name="parent_id" ref="estate_menu_root"/> <!-- under Real Estate root -->
            <field name="action" ref="estate_property_dashboard_action"/>
            <field name="sequence" eval="5"/>
        </record>

    </data>
</odoo>